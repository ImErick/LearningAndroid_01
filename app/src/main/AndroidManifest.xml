<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.erickgarcia.learningandroid_01">

    <!--agregando mi primer permiso weon-->
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_myicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.erickgarcia.learningandroid_01.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.erickgarcia.learningandroid_01.SecondActivity" android:parentActivityName="com.example.erickgarcia.learningandroid_01.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.example.erickgarcia.learningandroid_01.MainActivity"/>
        </activity>
        <activity android:name="com.example.erickgarcia.learningandroid_01.ThirdActivity" android:parentActivityName="com.example.erickgarcia.learningandroid_01.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.example.erickgarcia.learningandroid_01.MainActivity"/>
        </activity>
    </application>

</manifest>